@model IEnumerable<ButtonGridGame.Models.ButtonModel>

<style>
    .game-button{
        width:100px;
        text-align:center;
        border:none;
    }
    .game-button-image{
        width:70%;
    }
    .button-zone{
        display:flex;
        flex-wrap:wrap;
    }
    .line-break{
        flex-basis:100%;
        height:0;
    }
    .button-label{
        font-size:8px;
        text-align:center;
    }
</style>

@{
    string[] imageNames = { "BlueButton.png", "GreenButton.png", "PinkButton.png", "RedButton.png" };
}
<form>
    <div class="button-zone">
        @for (int i = 0; i < Model.Count(); i++)
        {
            @*Starts a new line every five elements*@
            if(i % 5 == 0)
            {
                <div class="line-break"></div>
            }
            <button class="game-button" name="buttonNumber" value=@Model.ElementAt(i).Id type="submit" asp-controller="button" asp-action="HandleButtonClick">

                @*Show button image according to the button state property*@
                <img class="game-button-image" src="~/images/@imageNames[Model.ElementAt(i).ButtonState]" />

                <div class="button-label">
                    @Model.ElementAt(i).Id, @Model.ElementAt(i).ButtonState
                </div>
            </button>
        }
    </div>
</form>
<div id="messageArea">
     <p>Try and see if you can change all the buttons color to the same color!</p>
</div>